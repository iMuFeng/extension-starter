{
  "name": "extension-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add dist/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./dist --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./dist --target=chromium",
    "start:firefox": "web-ext run --source-dir ./dist --target=firefox-desktop",
    "clear": "rimraf dist extension.*",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\" --fix --quiet",
    "predev": "npm run clear"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@ffflorian/jszip-cli": "^3.3.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitejs/plugin-react-swc": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.38.0",
    "eslint-config-next": "^13.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "run-p": "^0.0.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "web-ext": "^7.6.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0"
  }
}
